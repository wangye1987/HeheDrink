<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeeee"
    android:orientation="vertical" >
<include layout="@layout/base_activity_title" />
<RelativeLayout 
    android:id="@+id/ra_coin"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/margin_102"
         />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_15"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_result"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_42"
         >

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="@dimen/button_width_150"
            android:layout_height="40dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:text="继续充值"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

        <View
            android:layout_width="25dp"
            android:layout_height="1dp" >
        </View>

        <TextView
            android:id="@+id/tv_shopping_coin"
            android:layout_width="@dimen/button_width_150"
            android:layout_height="40dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:text="去逛逛"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</RelativeLayout>
    <ScrollView
        android:id="@+id/sc_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_16" >

                <TextView
                    android:id="@+id/tv_orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text=""
                    android:textColor="@color/color_666666" />

                <LinearLayout
                    android:id="@+id/order_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_17"
                    android:orientation="vertical" >
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_marginLeft="@dimen/margin_17"-->
                        <!--android:layout_marginTop="@dimen/margin_18"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" >-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="合计: "-->
                        <!--android:textColor="@color/color_666666" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/tv_total"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="@dimen/text_size_15"-->
                        <!--android:text=""-->
                        <!--android:textColor="@color/color_af2942" />-->

                <!--</LinearLayout>-->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/white"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_2b2b2b"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_shopping"
                android:layout_width="@dimen/button_width_150"
                android:layout_height="40dp"
                android:layout_marginTop="47dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
