    <LinearLayout
        android:id="@+id/fragment_home_title_check_city"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/fragment_home_title_location_city"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:maxLines="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="我的位置:北京"
        android:drawableRight="@drawable/arrow_down"
        android:background="@drawable/location_shape"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
    <RelativeLayout
        android:id="@+id/fragment_home_search_relative"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:paddingRight="5dp"
        android:clickable="true"
        android:visibility="visible" >

        <Button
            android:id="@+id/fragment_home_title_search"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/search_icon_main" />


    </RelativeLayout>

