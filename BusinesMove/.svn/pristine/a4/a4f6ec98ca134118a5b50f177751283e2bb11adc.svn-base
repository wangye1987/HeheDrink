<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <!-- 左侧布局============ -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4" >

        <LinearLayout
            android:id="@+id/fragment_home_middle_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height_245" >

                <ImageView
                    android:id="@+id/fragment_home_middle_left_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/imageview_default" />

                <ImageView
                    android:id="@+id/iv_pin_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pin"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/time_one"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/margin_28"
                    android:background="@drawable/home_time"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:src="@drawable/shouye_xianshitejia" />

                    <TextView
                        android:id="@+id/tv_time_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginLeft="2dp"
                        android:text=""
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/group_buy_list_item_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:text="天"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/product_hour_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text=""
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:text="时"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/product_minute_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text=""
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:text="分"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/product_seconds_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text=""
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:text="秒"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/fragment_home_middle_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_9"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_10"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/color_2b2b2b"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_14" >

                <TextView
                    android:id="@+id/fragment_home_middle_left_sold_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_af2942"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_left_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_af2942"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linear_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="invisible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="("
                        android:textColor="@color/color_999999"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/fragment_home_middle_left_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_item_top_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/color_ebebeb" />
    <!-- 右侧 布局========= -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.46" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 上面布局========== -->

            <RelativeLayout
                android:id="@+id/fragment_home_middle_right_top_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white" >

                <FrameLayout
                    android:id="@+id/fragment_right_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/fragment_home_middle_right_top_iv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height_108"
                        android:scaleType="fitXY"
                        android:src="@drawable/imageview_default" />

                    <ImageView
                        android:id="@+id/iv_pin_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pin"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/time_two"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="@dimen/margin_28"
                        android:background="@drawable/home_time"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="invisible" >

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:src="@drawable/shouye_xianshitejia" />

                        <TextView
                            android:id="@+id/tv_time_day_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginLeft="2dp"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/group_buy_list_item_day_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:text="天"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/product_hour_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:text="时"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:id="@+id/product_minute_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:text="分"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:id="@+id/product_seconds_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:text="秒"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_11" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/fragment_home_middle_right_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fragment_right_top"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:layout_marginLeft="@dimen/margin_14"
                    android:layout_marginRight="@dimen/margin_11"
                    android:layout_marginTop="@dimen/margin_4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/color_2b2b2b"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/fragment_home_middle_right_top_name"
                    android:layout_marginLeft="@dimen/margin_14"
                    android:layout_marginRight="@dimen/margin_11"
                    android:paddingBottom="@dimen/margin_3" >

                    <TextView
                        android:id="@+id/fragment_home_middle_right_top_activity_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_af2942"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_top_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_af2942"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/linear_top"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="invisible" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="("
                            android:textColor="@color/color_999999"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/fragment_home_middle_right_top_normal_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_item_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_ebebeb" />
            <!-- 下面布局 ============ -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <RelativeLayout
                    android:id="@+id/fragment_home_middle_right_bottom_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <FrameLayout
                        android:id="@+id/fragment_right_buttom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/fragment_home_middle_right_bottom_iv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/image_height_108"
                            android:scaleType="fitXY"
                            android:src="@drawable/imageview_default" />

                        <ImageView
                            android:id="@+id/iv_pin_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pin"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/time_three"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="@dimen/margin_28"
                            android:background="@drawable/home_time"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="invisible" >

                            <ImageView
                                android:id="@+id/ImageView04"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="2dp"
                                android:src="@drawable/shouye_xianshitejia" />

                            <TextView
                                android:id="@+id/tv_time_day_buttom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginLeft="2dp"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/group_buy_list_item_day_buttom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:text="天"
                                android:textColor="@color/white"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/product_hour_buttom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:text="时"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_11" />

                            <TextView
                                android:id="@+id/product_minute_buttom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:text="分"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_11" />

                            <TextView
                                android:id="@+id/product_seconds_buttom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:text="秒"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_11" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/fragment_home_middle_right_bottom_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_right_buttom"
                        android:layout_marginBottom="@dimen/margin_3"
                        android:layout_marginLeft="@dimen/margin_14"
                        android:layout_marginRight="@dimen/margin_11"
                        android:layout_marginTop="@dimen/margin_4"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/color_2b2b2b"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_home_middle_right_bottom_name"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="11dp"
                        android:paddingBottom="@dimen/margin_3" >

                        <TextView
                            android:id="@+id/fragment_home_middle_right_bottom_activity_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_af2942"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_buttom_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_af2942"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/linear_buttom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="invisible" >

                            <TextView
                                android:id="@+id/tv_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="("
                                android:textColor="@color/color_999999"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/fragment_home_middle_right_bottom_normal_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/color_999999"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tv_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/color_999999"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>