<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_40"
            android:paddingLeft="@dimen/margin_15"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_ordertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:" />
            <TextView
                android:id="@+id/tv_orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/gray_textstyle_13"
                android:text="" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin_15"
                style="@style/gray_textstyle_13_af2942"
                android:text="2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin"
            android:visibility="invisible" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/color_ebebeb" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    <HorizontalScrollView
        android:id="@+id/hs_scrollview"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/image_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_15"
            android:orientation="horizontal" />
    </HorizontalScrollView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/margin_5" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_999999"
            android:text="下单时间:" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_999999"
            android:paddingRight="@dimen/margin_15"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/color_ebebeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_40"
        android:gravity="center"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left" >

            <TextView
                android:id="@+id/tv_totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:text="共:5件" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_12"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:text="合计:" />
            <TextView
                android:id="@+id/tv_totalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center" >

            <TextView
                android:id="@+id/bt_cancle"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/button_gray_bg"
                android:textColor="@color/color_454545"
                android:textSize="@dimen/text_size_12"
                android:visibility="invisible"
                android:text="取消订单" />

            <TextView
                android:id="@+id/bt_receive"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/button_gray_bg"
                android:layout_marginRight="@dimen/margin_15"
                android:textColor="@color/color_454545"
                android:textSize="@dimen/text_size_12"
                android:visibility="invisible"
                android:text="确认收货" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_ebebeb" />

</LinearLayout>