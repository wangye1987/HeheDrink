<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp">

    <ImageView
        android:id="@+id/produce_iv_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/good_eyes" />

    <TextView
        android:id="@+id/produce_look_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/produce_iv_look"
        style="@style/text_12_style"/>

    <LinearLayout
        android:id="@+id/linear_iv_heart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toRightOf="@id/produce_look_tv"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/produce_iv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25"
        android:src="@drawable/good_callocation" />

        <TextView
            android:id="@+id/produce_heart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@id/linear_iv_heart"
            android:layout_weight="1"
            android:text=""
            style="@style/text_12_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_look"
        android:layout_toRightOf="@id/linear_iv_heart"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/produce_iv_people"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/good_whobuy" />

    <TextView
        android:id="@+id/produce_tv_people"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/produce_iv_people"
        android:text=" (看谁买了?)"
        style="@style/text_12_style" />
    </LinearLayout>
</RelativeLayout>