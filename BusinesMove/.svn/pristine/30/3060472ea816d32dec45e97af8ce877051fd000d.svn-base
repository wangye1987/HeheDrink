<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:orientation="vertical" >
<LinearLayout
        android:id="@+id/linear_thimal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_round_linear"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_9"
        android:padding="1dp"
        android:orientation="horizontal" >
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
</LinearLayout>
    <FrameLayout
        android:layout_toRightOf="@+id/linear_thimal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/margin_10"
        android:orientation="vertical" >


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/margin_5"
            android:ellipsize="end"
            android:gravity="center|left"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/color_2b2b2b"
            android:text="" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_11"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left" >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textColor="@color/color_FF3838"
                android:textSize="@dimen/text_size_13"
                android:text="" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_11"
                android:text="/å¥—" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/tv_every"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_11"
                android:layout_marginRight="@dimen/margin_36"
                android:text="" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/fragment_shopping_cart_item_outtime"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="right|bottom"
        android:visibility="visible" />
 </FrameLayout>
</RelativeLayout>
