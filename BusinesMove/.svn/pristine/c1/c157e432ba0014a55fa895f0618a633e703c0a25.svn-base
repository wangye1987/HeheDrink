<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/collect_all_tm"
            style="@style/SingleCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tm_goods"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height_173"/>

                <LinearLayout
                    android:id="@+id/tm_area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linearLayout_height_34"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:layout_below="@id/tm_goods"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_12_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="销量: " />

                    <TextView
                        android:id="@+id/tm_xl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF3939"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tm_unit_one"
                        style="@style/text_12_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        style="@style/text_12_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:text="剩余量: " />

                    <TextView
                        android:id="@+id/tm_kc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF3939"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tm_unit"
                        style="@style/text_12_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tm_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/result_tm" />


            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_width_10"
        android:layout_below="@id/hhm_area"
        android:background="@color/color_FFEDEDED" />
</LinearLayout>