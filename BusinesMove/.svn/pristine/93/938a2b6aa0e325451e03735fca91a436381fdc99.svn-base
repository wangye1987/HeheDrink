<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_40"
        android:gravity="center"
        android:animateLayoutChanges="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_drink_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/color_f5f4f4"
            android:text="@string/drink_info" />
        
        <RadioButton
            android:id="@+id/radio_drink_salon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_f5f4f4"
            android:gravity="center"
            android:button="@null"
            android:text="@string/tab_salon_name" />

    </RadioGroup>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/line_one"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/reveal_color"
             />

        <TextView
            android:id="@+id/line_two"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/reveal_color" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/find_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

    </FrameLayout>

</LinearLayout>