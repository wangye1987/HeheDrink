<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/margin_15"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_333333"
            android:maxLength="8"
            android:ellipsize="end"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_9"
                android:paddingRight="@dimen/margin_5"
                android:text=""
                android:textColor="@color/color_FF3838" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button_suit"
                android:gravity="center"
                android:paddingTop="@dimen/margin_3"
                android:paddingBottom="@dimen/margin_3"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="立省128元"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_arrow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_suit"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_marginRight="@dimen/margin_10"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/linear_sc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="@dimen/margin_10" >
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/add_suit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:src="@drawable/jia" />
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_ebebeb" />

    <LinearLayout
        android:id="@+id/listView_item_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
    <com.heheys.ec.lib.view.ScrollViewListView
        android:id="@+id/lv_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/transparent"
        android:visibility="visible" >

    </com.heheys.ec.lib.view.ScrollViewListView>

    <TextView
        android:id="@+id/add_shoppingcart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_32"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
         android:background="@drawable/shape_buy"
        android:gravity="center"
        android:text="加入购物车"
        android:visibility="gone"
        android:textColor="@color/color_FF3838"
        android:textSize="@dimen/text_size_15" >
    </TextView>

    <View
        android:id="@+id/view_line_two"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="gone"
        android:background="@color/color_ebebeb" />
    </LinearLayout>
</LinearLayout>