<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ececec"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_52"
        android:background="@drawable/usercenter_click"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录名" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/setting_name"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/setting_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_52"
        android:background="@drawable/usercenter_click"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改登录密码" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_18"
            android:src="@drawable/user_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_52"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/usercenter_click"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改收货地址" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_18"
            android:src="@drawable/user_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_52"
        android:background="@drawable/usercenter_click"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款账号" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_18"
            android:src="@drawable/user_right" />
    </LinearLayout>
</LinearLayout>