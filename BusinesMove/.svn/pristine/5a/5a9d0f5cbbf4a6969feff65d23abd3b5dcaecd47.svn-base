<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >

    <TextView
        android:maxWidth="60dp"
        android:id="@+id/salon_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:text="李某某"
        android:textColor="@color/color_302f3f"
        android:textSize="16sp" />

    <TextView
        android:layout_marginRight="90dp"
         android:id="@+id/salon_customer_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/salon_customer_name"
        android:text="总经理"
        android:textColor="@color/color_302f3f"
        android:textSize="15sp" />

    <Button
         android:id="@+id/salon_customer_contact_state"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bt_bg_yellow"
        android:padding="10dp"
        android:text="交换联系方式"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/salon_customer_name"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司:"
            android:textColor="@color/color_959596"
            android:textSize="14sp" />

        <TextView
             android:id="@+id/salon_customer_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="渤海贸易"
            android:textColor="@color/color_959596"
            android:textSize="14sp" />
    </LinearLayout>

    <com.heheys.ec.lib.view.DrawLineTextView
        android:id="@+id/salon_customer_list_item_line"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true" />

</RelativeLayout>