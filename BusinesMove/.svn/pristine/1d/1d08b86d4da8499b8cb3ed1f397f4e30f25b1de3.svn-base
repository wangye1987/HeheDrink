<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_20"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tm_goods"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <LinearLayout
            android:id="@+id/tm_area"
            android:layout_below="@id/tm_goods"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
            <TextView
                android:text="销量"
                style="@style/text_12_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tm_xl"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_FF3939"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="剩余量"
                style="@style/text_12_style"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tm_kc"
                android:layout_marginLeft="@dimen/margin_20"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_FF3939"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tm_unit"
                style="@style/text_12_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tm_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/result_tm"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</FrameLayout>