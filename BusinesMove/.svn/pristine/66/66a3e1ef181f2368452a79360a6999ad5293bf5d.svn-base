<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_detaile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <LinearLayout
        android:id="@+id/linear_thimal"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:background="@drawable/shape_round_linear"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_15"
        android:padding="1dp"
        android:gravity="center"
        android:orientation="horizontal" >
    <ImageView
        android:id="@+id/iv_tc"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/linear_thimal"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left|center"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_one_unit"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:gravity="left|center"
         android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_11"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_one_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_af2942" />

        <TextView
            android:id="@+id/tv_one_unit_units"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            android:text="" />

    </LinearLayout>
    </LinearLayout>


</RelativeLayout>
