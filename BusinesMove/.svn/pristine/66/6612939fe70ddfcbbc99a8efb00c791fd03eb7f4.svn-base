<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/login_linear_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@drawable/sharp_login" >

        <TextView
            style="@style/login_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:src="@drawable/list_user_default"
            android:text="@string/tel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:visibility="invisible" />

        <com.heheys.ec.view.DeleteEditText
            android:id="@+id/phone"
            style="@style/login_text_hint_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/order_margin_5"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:hint="@string/notice_phone_null"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:textColor="@color/color_454545" >
        </com.heheys.ec.view.DeleteEditText>
    </LinearLayout>

    <LinearLayout
        style="@style/login_linear_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height"
        android:layout_marginTop="@dimen/margin_16" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/sharp_login"
            android:gravity="center" >

            <TextView
                style="@style/login_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:text="@string/postcode_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text"
                android:visibility="invisible" />

            <com.heheys.ec.view.DeleteEditText
                android:id="@+id/pass_code"
                style="@style/login_text_hint_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/order_margin_5"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789"
                android:hint="@string/hint_postcode"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:textColor="@color/color_454545" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bt_bg_yellow"
            android:gravity="center" >

            <com.heheys.ec.lib.view.RevealLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/outh_code"
                    style="@style/white_text_style"
                    android:layout_width="@dimen/button_width_90"
                    android:layout_height="@dimen/button_height_48"
                    android:background="@null"
                    android:text="@string/send_postcode" />
            </com.heheys.ec.lib.view.RevealLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/login_linear_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/sharp_login" >

        <TextView
            style="@style/login_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:src="@drawable/list_user_default"
            android:text="@string/setting_pwd" />

        <com.heheys.ec.view.DeleteEditText
            android:id="@+id/password_one"
            style="@style/login_text_hint_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm0123456789"
            android:hint="@string/hint_pwd"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:textColor="@color/color_454545" >
        </com.heheys.ec.view.DeleteEditText>
    </LinearLayout>

    <LinearLayout
        style="@style/login_linear_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/sharp_login" >

        <TextView
            style="@style/login_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:src="@drawable/list_user_default"
            android:text="@string/commit_pwd" />

        <com.heheys.ec.view.DeleteEditText
            android:id="@+id/password_two"
            style="@style/login_text_hint_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm0123456789"
            android:hint="@string/hint_pwd_next"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:textColor="@color/color_454545" >
        </com.heheys.ec.view.DeleteEditText>
    </LinearLayout>

    <com.heheys.ec.lib.view.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/commit_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height"
            android:layout_marginLeft="@dimen/margin_29"
            android:layout_marginRight="@dimen/margin_29"
            android:layout_marginTop="@dimen/margin_35"
            android:background="@drawable/shape_forget"
            android:enabled="false"
            android:text="@string/reset_pwd"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </com.heheys.ec.lib.view.RevealLayout>

</LinearLayout>