<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/produce_iv_look"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="22"
        android:id="@+id/produce_look_tv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/produce_iv_look"
        android:textColor="@color/color_999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/produce_iv_heart"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toRightOf="@id/produce_look_tv"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/produce_heart_tv"
        android:text="64"
        android:textColor="@color/color_999999"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/produce_iv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/produce_iv_people"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/produce_heart_tv"
        android:layout_marginLeft="@dimen/margin_10"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="658 (看谁买了?)"
        android:textColor="@color/color_999999"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_toRightOf="@id/produce_iv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>