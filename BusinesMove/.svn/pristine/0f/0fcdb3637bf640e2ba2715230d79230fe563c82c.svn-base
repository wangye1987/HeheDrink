<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_suit"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_10" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_suit"
        android:layout_toRightOf="@+id/iv_suit"
        android:text="" />

    <TextView
        android:id="@+id/tv_price_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/iv_suit"
         android:layout_below="@id/tv_name"
         android:layout_marginTop="@dimen/margin_10"
         android:textColor="@color/color_999999"
        android:text="" />

    <TextView
        android:id="@+id/tv_unit_every"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_36"
        android:layout_alignTop="@id/tv_price_unit"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12"
        android:text="" />

    <TextView
        android:id="@+id/tv_every_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_unit_every"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:text="126" />

</RelativeLayout>
</LinearLayout>