<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/linearLayout_height_98"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linear_thimal"
        android:layout_width="60dp"
        android:layout_height="60dp"
         android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_15"
        android:padding="1dp"
        android:background="@drawable/shape_round_linear"
        android:gravity="center"
        android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_thimal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/linear_thimal"
        android:src="@drawable/productionjia" />

</LinearLayout>