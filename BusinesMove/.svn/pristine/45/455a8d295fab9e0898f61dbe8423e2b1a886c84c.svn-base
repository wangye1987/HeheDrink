<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<TextView
    android:background="@color/color_dfdfdf"
    android:layout_width="match_parent"
    android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/rv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_app"
                android:contentDescription="图标"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/hehe" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_15"
                android:text="喝喝云商"
                android:textColor="@color/color_FF3838"
                android:textSize="@dimen/text_size_18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本号: 2.0.0"
            android:layout_marginTop="@dimen/margin_5"
            android:textColor="@color/color_333333"
            android:layout_below="@+id/line_top"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_version"
            android:layout_margin="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_17"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.2"
            android:text="      喝喝云商是一个基于酒类互联网B2B交易平台与供应链服务及其金融、共享云仓储模式相结合的“互联网+”平台，致力于为全国各级酒类经销商提供高品质的互联网采销服务。"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_introduce"
            android:layout_marginLeft="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_10"
            android:text="电话:"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_introduce"
            android:layout_toRightOf="@id/tv_dh"
            android:paddingBottom="@dimen/margin_10"
            android:text=""
            android:textColor="@color/color_FF3838"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <TextView
    android:background="@color/color_eeeeeee"
    android:layout_width="match_parent"
    android:layout_height="10dp" />
    <LinearLayout
        android:id="@+id/linear_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_43"
        android:layout_below="@id/rv_top"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_333333"
         android:layout_marginLeft="@dimen/margin_15"
        android:text="货到付款使用帮助" />
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="right|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/arrow" />
    </LinearLayout>
    <TextView
        android:background="@color/color_eeeeeee"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:id="@+id/linear_help_hhm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_43"
        android:layout_below="@id/linear_help"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_help_hhm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="合伙买使用帮助" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/arrow" />
    </LinearLayout>
    <TextView
        android:background="@color/color_eeeeeee"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>