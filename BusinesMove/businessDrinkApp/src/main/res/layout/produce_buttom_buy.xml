<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/product_detail_bottom_parent"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:background="@color/white"
    android:orientation="horizontal">

    <!-- 左边区域 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/linear_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTop="@drawable/good_tel"
                android:gravity="center"
                android:text="电话"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#ebebeb" />

        <FrameLayout
            android:id="@+id/relative_shopping"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/group_buy_list_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:drawablePadding="@dimen/margin_5"
                android:drawableTop="@drawable/good_shopping"
                android:focusable="true"
                android:gravity="center"
                android:text="购物车"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/shoppingcare_num"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/msg_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <com.heheys.ec.lib.view.RevealLayout
        android:id="@+id/revea"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">

        <TextView
            android:id="@+id/bt_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/color_FF372D6C"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/product_detail_add_shoppingcart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/color_FFFDC901"
            android:gravity="center"
            android:text="@string/add_shopcart"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />
    </com.heheys.ec.lib.view.RevealLayout>
</LinearLayout>
    <TextView
        android:id="@+id/tv_dl"
        android:text="我要代理"
        android:gravity="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_18"
        android:background="#ffcb00"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>