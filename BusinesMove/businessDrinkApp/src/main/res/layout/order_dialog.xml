<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.92"
    android:background="@color/color_545151"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height_48"
            android:gravity="center"
            android:text="以下商品暂时缺货或者已经抢购完了"
            android:textColor="@color/color_8c8c8c"
            android:textSize="17sp" />

        <com.heheys.ec.lib.view.DrawLineTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ececec" />

        <ListView
            android:id="@+id/lv_order_dialog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_14"
            android:layout_weight="1" />
        <com.heheys.ec.lib.view.DrawLineTextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="11dp"
            android:background="@color/color_ececec" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_49"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bu_cancle"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="取消"
                style="@style/white_text_style"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/margin_16"
                android:background="@drawable/shape_button_gray"
                android:layout_height="@dimen/button_height_32" />
	
            <TextView
                android:layout_width="15dp"
                android:layout_height="1dip"
                ></TextView>
            <Button
                android:id="@+id/bu_remove"
                android:text="移除无货商品"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_16"
                style="@style/white_text_style"
                android:layout_width="match_parent"
                android:background="@drawable/sharp_round"
                android:layout_height="@dimen/button_height_32" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>