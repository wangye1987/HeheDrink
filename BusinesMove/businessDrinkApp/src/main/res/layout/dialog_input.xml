<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_round"
    android:id="@+id/call_root"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:paddingTop="30dp"
        android:paddingBottom="30dp" />

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginLeft="@dimen/margin_13"
        android:layout_marginRight="@dimen/margin_13"
        android:paddingTop="@dimen/margin_13"
        android:hint="请您输入备注,最多不超过50个字哟!"
        android:maxLength="50"
        android:gravity="top"
        android:textSize="@dimen/text_size_12"
        android:textColorHint="#818181"
        android:background="@null" >
    </EditText>
<com.heheys.ec.lib.view.DrawLineTextView 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_margin="@dimen/margin_13"
    android:layout_marginBottom="0dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_32"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/selector_click_button"
            android:text="@string/cancle"
            android:textColor="@drawable/selector_white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_32"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/selector_click_button"
            android:text="@string/ok"
            android:textColor="@drawable/selector_white" />

    </LinearLayout>

</LinearLayout>