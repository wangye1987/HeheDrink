<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/shape_button"
            android:paddingLeft="@dimen/margin_3"
            android:paddingRight="@dimen/margin_3"
            android:text="套装"
            android:textColor="@color/color_af2942"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tv_tz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@+id/textView1"
            android:text=""
            android:textSize="@dimen/text_size_10" />

        <LinearLayout
            android:id="@+id/linear_more"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/margin_20"
            android:gravity="right|center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_suit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:listSelector="@color/transparent" >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_f1f1f1" >
    </View>

    <LinearLayout
        android:id="@+id/linear_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="@dimen/margin_37" >

        <TextView
            android:id="@+id/total_suit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="@dimen/margin_10"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            android:text="合计:" />

        <TextView
            android:id="@+id/total_suit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_af2942" />
    </LinearLayout>
    

        <LinearLayout
            android:id="@+id/linear_top_view"
            android:layout_width="match_parent"
            android:background="@color/color_fef1f3"
            android:layout_height="@dimen/linearLayout_height_28"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_buttom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_28"
            android:gravity="center|left"
            android:background="@color/color_fef1f3"
            android:orientation="horizontal"
            android:visibility="gone" >
       
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_f1f1f1" >
    </View>  
</LinearLayout>