<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
    	android:layout_height="180dp"
   		 android:alpha="0.92"
        android:background="@drawable/dialog"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:layout_gravity="right"
        android:gravity="right" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:src="@drawable/weirenzheng" />
    </LinearLayout>

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="175dp">
        <LinearLayout
            android:id="@+id/title_linear"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
             android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册成功 !"
                android:autoLink="phone"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_4"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_16" />

		<TextView
		    android:id="@+id/tv_tips"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="left|center"
		    android:gravity="center"
		    android:layout_marginTop="@dimen/margin_5"
		    android:layout_marginBottom="@dimen/margin_5"
		    android:text="完善资料可以开通以下权限"
		    android:textColor="@color/color_666666"
		    android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_tip1"
                android:layout_width="match_parent"
               android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_gravity="left"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_12" 
                android:text="" />

            <TextView
                android:id="@+id/tv_tip2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:gravity="center|left"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_12" 
                android:text="" />

            <TextView
                android:id="@+id/tv_tip3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:gravity="center|left"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_12" 
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center|bottom"
            android:visibility="visible"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hehe_main"
                style="@style/white_textstyle"
                android:layout_width="@dimen/button_width_100"
                android:layout_height="@dimen/button_height_28"
                android:background="@drawable/gary_button"
                android:gravity="center"
                android:text="稍后再说" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/hehe_register"
                style="@style/white_textstyle"
                android:layout_width="@dimen/button_width_100"
                android:layout_height="@dimen/button_height_28"
                android:background="@drawable/bt_bg_yellow"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:text="立即开通" />

        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>