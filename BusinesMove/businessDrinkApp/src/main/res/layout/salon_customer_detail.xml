<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f4f4" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/solid_white_stroke_cc" >

        <RelativeLayout
            android:id="@+id/salon_customer_detail_top_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/salon_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="32dp"
                android:text="李某某"
                android:textColor="@color/color_302f3f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/salon_customer_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/salon_customer_name"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/salon_customer_name"
                android:text="总经理"
                android:textColor="@color/color_302f3f"
                android:textSize="15sp" />

            <Button
                android:id="@+id/salon_customer_state"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/salon_customer_position"
                android:layout_alignParentRight="true"
                android:layout_marginRight="52dp"
                android:background="@drawable/bt_bg_yellow"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp" />
            <!-- 中部布局 -->

            <LinearLayout
                android:id="@+id/salon_customer_middle_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/salon_customer_name"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司:"
                    android:textColor="@color/color_959596"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/salon_customer_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="渤海贸易"
                    android:textColor="@color/color_959596"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.heheys.ec.lib.view.DrawLineTextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/salon_customer_middle_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="32dp" />
        </RelativeLayout>
        <!-- 下部布局 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/salon_customer_detail_top_parent"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="28dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="联系方式"
                android:textColor="@color/color_302f3f"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:src="@drawable/salon_customer_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="手机"
                    android:textColor="@color/color_959596"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/salon_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="15510030090"
                    android:textColor="@color/color_959596"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="19dp"
                    android:src="@drawable/salon_customer_weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="微信"
                    android:textColor="@color/color_959596"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/salon_customer_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="15510030090"
                    android:textColor="@color/color_959596"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>