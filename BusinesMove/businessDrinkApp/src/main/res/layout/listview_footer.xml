<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_footer"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_paytype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_18"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/margin_18"
        	android:layout_marginRight="@dimen/margin_18"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="支付方式" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_overrun"
                    android:textColor="@color/gray_text"
                    android:layout_marginTop="@dimen/order_margin_10"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                    	android:layout_marginBottom="@dimen/margin_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_f9883d"
                        android:textSize="@dimen/text_size_14"
                        android:text="@string/pay_overrun_http" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

         <com.heheys.ec.lib.view.DrawLineTextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/order_margin_10" />

        <LinearLayout
            android:id="@+id/pay_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_40"
            android:gravity="center"
            android:visibility="gone" >

            <TextView
                android:id="@+id/delivery_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/order_margin_10"
                android:paddingLeft="17dp"
                android:text="@string/weixingpay" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/weixing_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/order_margin_10"
                android:src="@drawable/duigou" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_jd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_40"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_18"
        	android:layout_marginRight="@dimen/margin_18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jd_pay" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_9b9797"
                android:text="(最高支持5万)" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_jd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:src="@drawable/duigou" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_zfb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_40"
            android:layout_marginLeft="@dimen/margin_18"
            android:layout_marginRight="@dimen/margin_18"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfb_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="(最高支持5万)"
                android:textColor="@color/color_9b9797"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/duigou"
                android:visibility="invisible"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_40"
            android:layout_marginLeft="@dimen/margin_18"
            android:layout_marginRight="@dimen/margin_18"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weixin_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="(最高支持5万)"
                android:textColor="@color/color_9b9797"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/duigou"
                android:visibility="invisible"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_18"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_32"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_price" />

            <TextView
                android:id="@+id/tv_dong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_price_dong"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff0000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_32"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_send_price" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_send_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff0000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_32"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goods_total_price" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff0000" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_subscription"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_height="@dimen/linearLayout_height_32" >

            <TextView
                android:id="@+id/tv_ispay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_f98c43"
                android:text="@string/subscription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_f98c43" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>