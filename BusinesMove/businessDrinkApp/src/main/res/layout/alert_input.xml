<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_round"
    android:id="@+id/call_root"
    android:paddingTop="@dimen/margin_10"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:paddingTop="10dp"
        android:text="修改购买数量"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_cart_reduce"
            android:text="" />

        <EditText
            android:id="@+id/et_remark"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="5"
            android:textColorHint="#818181"
            android:textSize="@dimen/text_size_12" >

            <requestFocus />
        </EditText>
		<Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_cart_add"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_32"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/selector_click_button"
            android:text="@string/cancle"
            android:textColor="@drawable/selector_white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_32"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_weight="1"
            android:background="@drawable/selector_click_button"
            android:text="@string/ok"
            android:textColor="@drawable/selector_white" />

    </LinearLayout>

</LinearLayout>