<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/li_parent"
    android:background="@color/color_ececec"
    >
    <TextView
        android:id="@+id/line_top"
        android:background="@color/color_dfdfdf"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_below="@id/line_top"
        android:id="@+id/linear_name"
        android:layout_width="match_parent"
        android:elevation="@dimen/margin_2"
        android:layout_height="@dimen/linearLayout_height_52"
        android:background="@drawable/usercenter_click"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录名" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/setting_name"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_18"
            android:visibility="invisible"
            android:src="@drawable/user_right" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/linear_name"
        android:id="@+id/setting_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_52"
        android:elevation="@dimen/margin_2"
        android:background="@drawable/ripple_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改登录密码" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_18"
            android:src="@drawable/user_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/setting_password"
        android:id="@+id/setting_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_52"
        android:elevation="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/ripple_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收货地址" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_18"
            android:src="@drawable/user_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/setting_address"
        android:id="@+id/setting_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_52"
        android:background="@drawable/ripple_bg"
        android:elevation="@dimen/margin_2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/usercenter_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款账号" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_18"
            android:src="@drawable/user_right" />
    </LinearLayout>
    <com.heheys.ec.lib.view.RevealLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/bt_login_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearLayout_height_52"
            android:background="@drawable/ripple_bg"
            android:gravity="center"
            android:elevation="@dimen/margin_2"
            android:text="@string/login_out"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
    </com.heheys.ec.lib.view.RevealLayout>
</RelativeLayout>