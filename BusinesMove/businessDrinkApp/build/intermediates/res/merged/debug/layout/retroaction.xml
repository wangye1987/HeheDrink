<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_retroaction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayout_height_150"
        android:background="@drawable/sharp_linear"
        style="@style/marginall_5"
        android:gravity="top|left"
        android:maxLength="200" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bu_commit"
        android:layout_gravity="right"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height_38"
        android:background="@drawable/bt_bg_yellow"
        android:layout_marginRight="@dimen/margin_10"
        android:text="@string/commit_retroaction" />

</LinearLayout>
