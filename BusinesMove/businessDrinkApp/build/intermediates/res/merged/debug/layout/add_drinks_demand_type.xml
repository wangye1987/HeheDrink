<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_drinks_demand_type_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/color_545151"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/add_drinks_demand_type_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="187dp"
            android:background="@drawable/drinks_demand_check_bg"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="想买酒"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/add_drinks_demand_type_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/drinks_demand_check_bg"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="想卖酒"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
          android:id="@+id/add_drinks_demand_type_close"
        android:visibility="visible"
        android:layout_marginTop="16dp"
        android:layout_marginRight="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/wine_demand_close"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</RelativeLayout>