<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:alpha="1.0"
        android:background="@color/color_f3f3f3" >
    </View>

    <RelativeLayout
        android:id="@+id/relative_produce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_14"
            android:paddingBottom="@dimen/margin_12" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_add"
            android:layout_toRightOf="@id/iv_pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_toRightOf="@id/iv_pic"
            android:gravity="bottom|left"
            android:paddingBottom="@dimen/margin_12"
            android:textColor="@color/color_af2942" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_toLeftOf="@id/tv_add"
            android:layout_toRightOf="@id/tv_price"
            android:paddingBottom="@dimen/margin_12"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/shopping_suit" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:alpha="1.0"
        android:background="@color/color_f3f3f3" >
    </View>

</LinearLayout>