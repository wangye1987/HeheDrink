<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sharp_listview"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:text="酒+互联网"
                android:textColor="@color/color_454545"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_iamge"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/imageview_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_18"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_time" />

                        <TextView
                            android:id="@+id/salon_item_starttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="2015-10-10 14:00:00"
                            android:textColor="@color/color_858585"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/salon_item_endtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:text="2015-10-10 14:00:00"
                            android:textColor="@color/color_858585"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_18"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center|left" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/adress" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="北京朝阳"
                            android:textColor="@color/color_858585"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_18"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingBottom="15dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wo" />

                        <TextView
                            android:id="@+id/tv_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:text="参入20人"
                            android:textColor="@color/color_858585"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.heheys.ec.lib.view.DrawLineTextView
                android:id="@+id/salon_item_line"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/order_margin_10"
                android:layout_marginRight="@dimen/order_margin_10" />
 <com.heheys.ec.lib.view.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
            <Button
                android:id="@+id/commit_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_55"
                android:layout_marginRight="@dimen/margin_55"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/bt_bg_yellow"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/instance"
                android:textColor="@color/white"
                android:textSize="15sp" />
            </com.heheys.ec.lib.view.RevealLayout>
        </LinearLayout>

       

        <ImageView
            android:layout_marginTop="230dp"
            android:id="@+id/salon_item_state"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/salon_over"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/color_f5f4f4" />

</LinearLayout>